# Daily Index Tracker - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Development Environment
NODE_ENV=development

# N8N Configuration
N8N_HOST=localhost:5678
N8N_API_KEY=your_n8n_api_key_here
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=password

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# KV Namespaces (will be created during deployment)
KV_NAMESPACE_TIMESERIES=your_timeseries_namespace_id
KV_NAMESPACE_JOBS=your_jobs_namespace_id
KV_NAMESPACE_PACKAGES=your_packages_namespace_id
KV_NAMESPACE_CONFIG=your_config_namespace_id

# Queue Configuration
LLM_ANALYSIS_QUEUE=your_llm_analysis_queue_name
PACKAGING_QUEUE=your_packaging_queue_name
DELIVERY_QUEUE=your_delivery_queue_name

# Database (for local testing if needed)
DATABASE_URL=sqlite:///./test.db

# External Services (for testing)
OPENROUTER_API_KEY=your_openrouter_api_key
GEMINI_API_KEY=your_gemini_api_key
CLAUDE_API_KEY=your_claude_api_key

# Notification Services (for N8N workflows)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Chart Generation
CHART_IMG_API_KEY=your_chart_img_api_key

# Security
INGESTION_WORKER_SECRET=your_secure_random_secret_key
ADMIN_CONSOLE_SECRET=your_admin_console_secret_key

# Monitoring and Logging
LOG_LEVEL=debug
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking